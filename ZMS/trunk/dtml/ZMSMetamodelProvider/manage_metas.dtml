function exportBtnClick() 
{
  fm = document.forms['form0'];
  href = fm.action+'?lang=<dtml-var lang>&btn=<dtml-var "getZMILangStr('BTN_EXPORT')" html_quote>';
  for (i = 0; i < fm.elements.length; i++) 
  {
    el = fm.elements[i];
    if (el.name=='ids:list' && el.type=='checkbox' && el.checked)
      href+='&'+el.name+'='+el.value;
  }
  window.open(href);
}

/**
 *
 * @param el		Html-Form Element
 */
function btnClick(el) 
{
  self.btnClicked = el.value;
}

function showDstMetaTypes( id) 
{
  var img = $("img:last","#a_"+id)[0];
  var coords = getCoords(img);
  var div = $("#dst_meta_types_"+id);
  div.css( {top: coords.y+img.offsetHeight, left: coords.x+img.offsetWidth, visibility: 'visible', display: 'block', position: 'absolute'});
  div.show("normal");
}

function hideDstMetaTypes( id) 
{
  var div = $("#dst_meta_types_"+id);
  div.css( {visibility: 'hidden', display: 'none'});
  div.hide("normal");
