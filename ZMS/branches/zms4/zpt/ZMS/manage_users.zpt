<script>
	$(function(){
		if (typeof zmiParams['search_term'] != "undefined") {
			zmiModal('#insertUser',{title:getZMILangStr('BTN_INSERT'),open:zmiModalInsertUserOpen});
		}
		$(".userName").each(function() {
				var $this = $(this);
				var id = $this.attr("id");
				$.get(self.location.href,{existsUser:id},function(result) {
						if (result!="1") {
							$("a>span",$this).addClass("text-danger bg-danger");
							$("a>span>i",$this).attr("class","icon-remove");
						}
						else {
							$("a>span>i",$this)
								.attr("class","icon-user")
								.mouseover(function() {
										var $a = $("a:first",$this);
										if (typeof $a.attr("title")=="undefined") {
											$a.attr("title","");
											$.get(self.location.href,{findUser:id},function(result) {
												var details =	eval("("+result+")");
												var title = "";
												for (var i=0; i < details.length; i++) {
													title += details[i]["label"]+"="+details[i]["value"] + "; ";
												}
												$a.attr("title",title).tooltip('show');
											});
										}
									});
						}
					});
			});
	});
</script>

