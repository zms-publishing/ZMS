			<tr tal:condition="python:len(nodelist)==0">
				<td tal:attributes="colspan python:[3,4][int(multilang)]" tal:content="python:here.getZMILangStr('ATTR_NONE')">None</td>
			</tr>
		</tbody>
	</table>
</form>

</tal:block>

