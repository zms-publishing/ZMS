-->

  <dtml-var "f_headline(_,_,headline=getZMILangStr('ATTR_STYLESHEET'))">
  <table cellspacing="0" cellpadding="2" border="0" style="clear:left">
  <tr>
   <td valign="top">
    <!-- Colormap -->
    <table cellspacing="0" cellpadding="0" border="0">
    <tr style="background-color:black;">
     <td>
      <dtml-let colorMap="get_colormap()">
       <table cellspacing="1" cellpadding="0" border="0">
        <dtml-in "colorMap.keys()" sort>
         <dtml-let key=sequence-item value="colorMap[key]">
          <tr>
           <td style="background-color:white;"><div class="form-small">&nbsp;.<dtml-var key>&nbsp;</div></td>
           <td class="<dtml-var key>"><img src="<dtml-var spacer_gif>" width="8" height="8" title="color: <dtml-var value>" border="0"></td>
          </tr>
         </dtml-let>
        </dtml-in>
       </table>
      </dtml-let>
     </td>
    </tr>
    </table>
    <br/>
   </td>
   <td valign="top" class="zmiNeutralColorMedium0">
    <!-- Stylesheets -->
    <dtml-call "REQUEST.set('ids',[])">
    <dtml-in "getStylesheets()">
     <dtml-let ob_id=id>
      <dtml-call "ids.append(ob_id)">
     </dtml-let>
    </dtml-in>
    <dtml-call "REQUEST.set('cssId',REQUEST.form.get('cssId',''))">
    <dtml-unless "cssId in ids">
     <dtml-call "REQUEST.set('cssId',ids[0])">
    </dtml-unless>
    <table cellspacing="0" cellpadding="0" border="0" width="100%">
    <tr>
     <td align="left" class="form-small" valign="bottom">
      <select class="form-small" name="cssId" onchange="location.href='<dtml-var URL>?cssId='+this.options[this.selectedIndex].value+'&lang=<dtml-var lang>';">
       <dtml-in "getStylesheets()">
        <dtml-let ob_id=id>
         <option value="<dtml-var id>"<dtml-if "cssId==ob_id"> selected="selected"</dtml-if>><dtml-var "absolute_url()[_.len(BASE0):]"></option>
        </dtml-let>
       </dtml-in>
      </select>
      &nbsp;&nbsp;<input class="form-checkbox" type="checkbox" name="default:int" value="1" <dtml-if "getStylesheet().id()==cssId">checked="checked"</dtml-if>/>&nbsp;Default&nbsp;&nbsp;&nbsp;&nbsp;
     </td>
     <td align="right" class="form-small" valign="bottom">
      <dtml-var "getZMILangStr('ACTION_INSERT')%display_type(REQUEST)">:
      <input class="form-small" name="newCssId" value="styles-<dtml-var "_.len(ids)+1">.css" size="20"/>
      <input class="form-small" name="btn" type="submit" value="<dtml-var "getZMILangStr('BTN_INSERT')" html_quote>" onclick="self.btnClicked=this.value;" />
     </td>
    </tr>
    </table>
    <!-- Textarea -->
    <dtml-let size="_.int(55)">
     <textarea class="form-fixed" name="stylesheet:text" wrap="off"
       cols="<dtml-var size>"
       style="width:<dtml-var "_.int(size)*11">px"
       rows="25"
     ><dtml-with "getStylesheet(cssId)"><dtml-var raw html_quote></dtml-with></textarea>
     <a href="manage_editorForm?displayPreview=True&came_from=<dtml-var URL>&lang=<dtml-var lang>&fmName=form0&elName=stylesheet:text&headline=<dtml-var "getZMILangStr('ATTR_STYLESHEET')+': '+cssId" url_quote>" onclick="javascript:return confirmChanges(this);" class="button"><img src="<dtml-var MISC_ZMS>table_cell_edit.gif" alt="<dtml-var "getZMILangStr('BTN_EDIT')">" title="<dtml-var "getZMILangStr('BTN_EDIT')">" border="0"/></a>
    </dtml-let>
   </td>
  </tr>
  <tr>
   <td>&nbsp;</td>
   <td>
    <div class="form-element">
     <input class="form-submit" name="btn" type="submit" value="<dtml-var "getZMILangStr('BTN_CHANGE')" html_quote>" onclick="self.btnClicked=this.value;" />
     <dtml-unless "getStylesheet().id()==cssId">
      <input class="form-submit" name="btn" type="submit" value="<dtml-var "getZMILangStr('BTN_DELETE')" html_quote>" onclick="self.btnClicked=this.value;" />
     </dtml-unless>
    </div>
   </td>
  </tr>
  <tr>
   <td>&nbsp;</td>
  </tr>
  </table>

